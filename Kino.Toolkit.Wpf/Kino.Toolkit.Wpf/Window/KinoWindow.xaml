        <GradientStop Offset="0"
                      Color="#FFE3C085" />
        <GradientStop Offset="0.19"
                      Color="#FFF4CC89" />
        <GradientStop Offset="0.36"
                      Color="#FFF5C777" />
        <GradientStop Offset="0.36"
                      Color="#FFF5BB56" />
        <GradientStop Offset="0.79"
                      Color="#FFF4CE9A" />
