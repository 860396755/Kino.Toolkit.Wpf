<UserControl x:Class="Kino.Toolkit.Wpf.Samples.ListBoxSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <kino:KinoSelectionCheckBox RelativeListBox="{Binding ElementName=ListBox}" Margin="8" Content="全选"/>
            <kino:KinoListBox DisplayMemberPath="Name" ItemsSource="{Binding}" SelectionMode="Extended" Margin="8" x:Name="ListBox"/>
        </StackPanel>
    </Grid>
</UserControl>
