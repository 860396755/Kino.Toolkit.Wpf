<UserControl x:Class="Kino.Toolkit.Wpf.Samples.StateIndicatorSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kino.Toolkit.Wpf.Samples"
             xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <kino:KinoStateIndicator Margin="8"
                                         State="{Binding SelectedItem,ElementName=StatesListBox}"
                                         HorizontalAlignment="Left" />
                <kino:KinoStateIndicator Margin="8"
                                         State="{Binding SelectedItem,ElementName=StatesListBox}"
                                         HorizontalAlignment="Left">
                    <Ellipse Fill="Gray" />
                </kino:KinoStateIndicator>
            </StackPanel>
            <ListBox Margin="8"
                     x:Name="StatesListBox" />
        </StackPanel>
    </Grid>
</UserControl>
