<UserControl x:Class="Kino.Toolkit.Wpf.Samples.ResizingControlSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kino.Toolkit.Wpf.Samples"
             xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <kino:KinoResizingControl RenderTransformOrigin="0.5,0.5">
                <TextBox AcceptsReturn="True"
                         VerticalScrollBarVisibility="Disabled" 
                         Margin="8"/>
            </kino:KinoResizingControl>
            
            <Button Content="Commit" Margin="8"/>
        </StackPanel>
    </Grid>
</UserControl>
