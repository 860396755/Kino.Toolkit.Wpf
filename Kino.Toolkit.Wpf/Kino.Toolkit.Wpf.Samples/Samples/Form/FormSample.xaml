<UserControl x:Class="Kino.Toolkit.Wpf.Samples.FormSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:Kino.Toolkit.Wpf.Samples"
             xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:FormTestModel Name="Username" />
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="TopHeaderTemplate">
            <TextBlock Text="{Binding}"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right" 
                       Margin="0,1,0,0"/>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel Background="White">
        <kino:KinoForm Width="500" HorizontalAlignment="Left" >
            <kino:KinoFormTitle Content="用户信息" />
          
            <TextBox kino:KinoForm.Header="用户名" kino:KinoForm.IsRequired="True"
                     Text="{Binding Name,Mode=TwoWay}"  x:Name="NameElement"/>

            <PasswordBox kino:KinoForm.Header="密码"
                         kino:KinoForm.IsRequired="True" />
            <ComboBox kino:KinoForm.Header="国家" />
            <kino:KinoFormSeparator />
            <kino:KinoFormTitle Content="家庭信息" Description="家庭信息不是必填项，但提供家庭信息可以让我们给您提供更好的服务。"/>
            <TextBox kino:KinoForm.Header="父"
                     kino:KinoForm.Description="可以不填" />
            <TextBox kino:KinoForm.Header="母"
                     kino:KinoForm.Description="可以不填" />
            <CheckBox kino:KinoForm.Header="已婚" />

            <StackPanel kino:KinoForm.Header="性别" Orientation="Horizontal" kino:KinoForm.IsRequired="True">
                    <RadioButton Content="男" GroupName="Sex"/>
                    <RadioButton Content="女"
                                 GroupName="Sex" />
                </StackPanel>
         
            <CheckBox kino:KinoForm.Header="已婚" />
            <kino:KinoFormItem Header="备注"
                               HeaderTemplate="{StaticResource TopHeaderTemplate}">
                <TextBox AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="100" />
            </kino:KinoFormItem>
        </kino:KinoForm>
        <TextBox Text="{Binding Name,Mode=TwoWay}" />

    </StackPanel>
</UserControl>
