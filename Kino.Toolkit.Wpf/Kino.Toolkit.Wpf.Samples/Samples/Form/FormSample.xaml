<local:SamplePage x:Class="Kino.Toolkit.Wpf.Samples.FormSample"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  mc:Ignorable="d"
                  xmlns:local="clr-namespace:Kino.Toolkit.Wpf.Samples"
                  xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
                  Header="Form"
                  Link="https://github.com/DinoChan/Kino.Toolkit.Wpf/tree/master/Kino.Toolkit.Wpf/Kino.Toolkit.Wpf/Form"
                  d:DesignHeight="1950"
                  d:DesignWidth="800">
    <local:SamplePage.DataContext>
        <local:FormTestModel Name="Username" />
    </local:SamplePage.DataContext>
    <local:SamplePage.Resources>
        <DataTemplate x:Key="TopHeaderTemplate">
            <TextBlock Text="{Binding}"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       Margin="0,1,0,0" />
        </DataTemplate>
    </local:SamplePage.Resources>
    <StackPanel Background="White">
        <local:SampleSection Header="Nomal Form">
            <kino:KinoForm Width="500"
                           HorizontalAlignment="Left">
                <kino:KinoFormTitle Content="用户信息" />
                <TextBox kino:KinoForm.Label="用户名"
                         kino:KinoForm.IsRequired="True"
                         Text="{Binding Name,Mode=TwoWay}" />
                <PasswordBox kino:KinoForm.Label="密码"
                             kino:KinoForm.IsRequired="True" />
                <ComboBox kino:KinoForm.Label="国家" />

                <kino:KinoFormSeparator />

                <kino:KinoFormTitle Content="家庭信息"
                                    Description="家庭信息不是必填项，但提供家庭信息可以让我们给您提供更好的服务。" />

                <TextBox kino:KinoForm.Label="父"
                         kino:KinoForm.Description="可以不填" />
                <TextBox kino:KinoForm.Label="母"
                         kino:KinoForm.Description="可以不填" />
                <CheckBox kino:KinoForm.Label="已婚"
                          Content="已婚" />
                <StackPanel kino:KinoForm.Label="性别"
                            Orientation="Horizontal"
                            kino:KinoForm.IsRequired="True">
                    <RadioButton Content="男"
                                 GroupName="Sex" />
                    <RadioButton Content="女"
                                 GroupName="Sex"
                                 Margin="8,0,0,0" />
                </StackPanel>
                <kino:KinoFormItem Label="备注"
                                   LabelTemplate="{StaticResource TopHeaderTemplate}">
                    <TextBox AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="100" />
                </kino:KinoFormItem>
                <kino:KinoForm.CommandBar>
                    <kino:KinoFormCommandBar>
                        <kino:KinoButton Content="OK"
                                         Click="OnOK"
                                         IsDefault="True" />
                        <kino:KinoButton Content="Cancel"
                                         IsCancel="True" />

                    </kino:KinoFormCommandBar>
                </kino:KinoForm.CommandBar>
            </kino:KinoForm>
            <local:SampleSection.SourceCodes>
                <local:SourceCodeModel SourceCodeType="Xaml"
                                       Haader="FormSample.xaml"
                                       CodeSource="/Kino.Toolkit.Wpf.Samples;component/SourceFiles/FormSample.Section1.txt" />
            </local:SampleSection.SourceCodes>
        </local:SampleSection>
        <local:SampleSection Header="Custom Form">
            <local:SampleSection.Resources>
                <Style TargetType="kino:KinoFormItem">
                    <Setter Property="Margin"
                            Value="0,4,0,8" />
                    <Setter Property="Padding"
                            Value="0,4,0,0" />
                    <Setter Property="LabelTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#FF555555"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="kino:KinoFormItem">
                                <StackPanel x:Name="Root">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentPresenter Content="{TemplateBinding Label}"
                                                          ContentTemplate="{TemplateBinding LabelTemplate}" />
                                        <Grid ToolTip="{TemplateBinding Description}"
                                              Visibility="{Binding Description,RelativeSource={RelativeSource Mode=TemplatedParent},Converter={StaticResource NullToValueConverter},ConverterParameter=Collapsed,FallbackValue=Visible}"
                                              Margin="8,0,0,0"
                                              Background="Transparent">
                                            <TextBlock Style="{StaticResource FontAwesome}"
                                                       Text="&#xf059;"
                                                       VerticalAlignment="Center"
                                                       Foreground="LightSeaGreen"
                                                       FontSize="14" />
                                        </Grid>
                                    </StackPanel>
                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      x:Name="ContentPresenter" />
                                </StackPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="kino:KinoFormTitle">
                    <Setter Property="Margin"
                            Value="0,4,4,8" />
                </Style>

                <Style TargetType="kino:KinoFormSeparator">
                    <Setter Property="Margin"
                            Value="0,4,0,8" />
                </Style>
            </local:SampleSection.Resources>
            <kino:KinoForm Width="500"
                           HorizontalAlignment="Left">
                <kino:KinoFormTitle Content="用户信息" />

                <TextBox kino:KinoForm.Label="用户名"
                         kino:KinoForm.IsRequired="True"
                         Text="{Binding Name,Mode=TwoWay}" />

                <PasswordBox kino:KinoForm.Label="密码"
                             kino:KinoForm.IsRequired="True" />
                <ComboBox kino:KinoForm.Label="国家" />
                <kino:KinoFormSeparator />
                <kino:KinoFormTitle Content="家庭信息"
                                    Description="家庭信息不是必填项，但提供家庭信息可以让我们给您提供更好的服务。" />
                <TextBox kino:KinoForm.Label="父"
                         kino:KinoForm.Description="可以不填" />
                <TextBox kino:KinoForm.Label="母"
                         kino:KinoForm.Description="可以不填" />
                <CheckBox kino:KinoForm.Label="已婚"
                          Content="已婚" />

                <StackPanel kino:KinoForm.Label="性别"
                            Orientation="Horizontal"
                            kino:KinoForm.IsRequired="True">
                    <RadioButton Content="男"
                                 GroupName="Sex" />
                    <RadioButton Content="女"
                                 GroupName="Sex"
                                 Margin="8,0,0,0" />
                </StackPanel>


                <kino:KinoFormItem Label="备注"
                                   LabelTemplate="{StaticResource TopHeaderTemplate}">
                    <TextBox AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="100" />
                </kino:KinoFormItem>
                <kino:KinoForm.CommandBar>
                    <kino:KinoFormCommandBar>
                        <kino:KinoButton Content="OK"
                                         Click="OnOK"
                                         IsDefault="True" />
                        <kino:KinoButton Content="Cancel"
                                         IsCancel="True" />

                    </kino:KinoFormCommandBar>
                </kino:KinoForm.CommandBar>
            </kino:KinoForm>
            <local:SampleSection.SourceCodes>
                <local:SourceCodeModel SourceCodeType="Xaml"
                                       Haader="FormSample.xaml"
                                       CodeSource="/Kino.Toolkit.Wpf.Samples;component/SourceFiles/FormSample.Section2.txt" />
            </local:SampleSection.SourceCodes>
        </local:SampleSection>
        <local:SampleSection Header="Expander">
            <kino:KinoForm Width="500"
                           HorizontalAlignment="Left">
                <Expander kino:KinoForm.IsItemItsOwnContainer="True"
                          Header="用户信息"
                          IsExpanded="True">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0">
                        <TextBox kino:KinoForm.Label="用户名"
                                 kino:KinoForm.IsRequired="True"
                                 Text="{Binding Name,Mode=TwoWay}" />
                        <PasswordBox kino:KinoForm.Label="密码"
                                     kino:KinoForm.IsRequired="True" />
                    </kino:KinoForm>
                </Expander>
                <Expander kino:KinoForm.IsItemItsOwnContainer="True"
                          Header="其它信息"
                          IsExpanded="True">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0">
                        <ComboBox kino:KinoForm.Label="国家" />
                        <TextBox kino:KinoForm.Label="父"
                                 kino:KinoForm.Description="可以不填" />
                        <TextBox kino:KinoForm.Label="母"
                                 kino:KinoForm.Description="可以不填" />
                    </kino:KinoForm>
                </Expander>
            </kino:KinoForm>
            <local:SampleSection.SourceCodes>
                <local:SourceCodeModel SourceCodeType="Xaml"
                                       Haader="FormSample.xaml"
                                       CodeSource="/Kino.Toolkit.Wpf.Samples;component/SourceFiles/FormSample.Section3.txt" />
            </local:SampleSection.SourceCodes>
        </local:SampleSection>
        <local:SampleSection Header="显示或隐藏">
            <kino:KinoForm Width="500"
                           HorizontalAlignment="Left">
                <kino:KinoForm.Resources>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                </kino:KinoForm.Resources>
                <CheckBox kino:KinoForm.Label="显示额外信息"
                          x:Name="ExtraInformationCheckBox" />
                <Grid kino:KinoForm.IsItemItsOwnContainer="True"
                      Visibility="{Binding IsChecked,ElementName=ExtraInformationCheckBox,Converter={StaticResource BooleanToVisibilityConverter}}">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0">
                        <ComboBox kino:KinoForm.Label="国家" />
                        <TextBox kino:KinoForm.Label="父"
                                 kino:KinoForm.Description="可以不填" />
                        <TextBox kino:KinoForm.Label="母"
                                 kino:KinoForm.Description="可以不填" />
                    </kino:KinoForm>
                </Grid>
                <kino:KinoFormItem Label="备注"
                                   Visibility="{Binding IsChecked,ElementName=ExtraInformationCheckBox,Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBox />
                </kino:KinoFormItem>
            </kino:KinoForm>
            <local:SampleSection.SourceCodes>
                <local:SourceCodeModel SourceCodeType="Xaml"
                                       Haader="FormSample.xaml"
                                       CodeSource="/Kino.Toolkit.Wpf.Samples;component/SourceFiles/FormSample.Section4.txt" />
            </local:SampleSection.SourceCodes>
        </local:SampleSection>
        <local:SampleSection Header="使用ItemsPanelTemplate">
            <kino:KinoForm Width="500"
                           HorizontalAlignment="Left">
                <kino:KinoForm.Resources>
                    <Style TargetType="kino:KinoFormItem"
                           x:Key="FromItemStyle"
                           BasedOn="{StaticResource ControlPanelFromItemStyle}">
                        <Setter Property="Margin"
                                Value="8" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="kino:KinoFormItem">
                                    <StackPanel x:Name="Root">
                                        <ContentPresenter Content="{TemplateBinding Label}"
                                                          ContentTemplate="{TemplateBinding LabelTemplate}" />
                                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                                          x:Name="ContentPresenter"
                                                          Height="50" />
                                        <ContentPresenter Visibility="{Binding Description,RelativeSource={RelativeSource Mode=TemplatedParent},Converter={StaticResource NullToValueConverter},ConverterParameter=Collapsed,FallbackValue=Visible}"
                                                          Margin="0,2,0,0"
                                                          Content="{TemplateBinding Description}"
                                                          TextBlock.Foreground="{Binding Source={x:Static SystemColors.GrayTextBrush}}" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <ItemsPanelTemplate x:Key="ItemsPanelTemplate">
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </kino:KinoForm.Resources>
                <Expander kino:KinoForm.IsItemItsOwnContainer="True"
                          Header="用户信息"
                          IsExpanded="True">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0"
                                   ItemContainerStyle="{StaticResource FromItemStyle}"
                                   ItemsPanel="{StaticResource ItemsPanelTemplate}">
                        <TextBox kino:KinoForm.Label="用户名" />
                        <TextBox kino:KinoForm.Label="级别" />
                        <TextBox kino:KinoForm.Label="备注" />

                    </kino:KinoForm>
                </Expander>
                <Expander kino:KinoForm.IsItemItsOwnContainer="True"
                          Header="其它信息"
                          IsExpanded="True">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0"
                                   ItemContainerStyle="{StaticResource FromItemStyle}"
                                   ItemsPanel="{StaticResource ItemsPanelTemplate}">
                        <TextBox kino:KinoForm.Label="学校" />
                        <TextBox kino:KinoForm.Label="职业" />
                        <TextBox kino:KinoForm.Label="证书" />
                    </kino:KinoForm>
                </Expander>
                <Expander kino:KinoForm.IsItemItsOwnContainer="True"
                          Header="住址信息"
                          IsExpanded="True">
                    <kino:KinoForm Grid.IsSharedSizeScope="False"
                                   Padding="0"
                                   ItemContainerStyle="{StaticResource FromItemStyle}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <TextBox kino:KinoForm.Label="邮编" />
                        <kino:KinoFormItem Label="住址"
                                           Grid.Column="1"
                                           Grid.ColumnSpan="2">
                            <TextBox />
                        </kino:KinoFormItem>
                    </kino:KinoForm>
                </Expander>
            </kino:KinoForm>
            <local:SampleSection.SourceCodes>
                <local:SourceCodeModel SourceCodeType="Xaml"
                                       Haader="FormSample.xaml"
                                       CodeSource="/Kino.Toolkit.Wpf.Samples;component/SourceFiles/FormSample.Section5.txt" />
            </local:SampleSection.SourceCodes>
        </local:SampleSection>
        <local:SampleSection Header="Form Dialog">
            <Button Content="Show Form Dialog"
                    Click="OnShowNewDialog"
                    HorizontalAlignment="Left" />
        </local:SampleSection>

        <!--<Button Content="OK"
                VerticalAlignment="Center" Margin="5"
                         IsDefault="True" />
        <Button Content="Cancel"
                VerticalAlignment="Center"
                Margin="5"
                IsCancel="True" />-->
    </StackPanel>
</local:SamplePage>
